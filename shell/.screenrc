escape ^]^|

defbce on

# term term-256color
# term xterm-256color
term screen-256color
#term screen.xterm-256color

startup_message off
autodetach on
vbell off
# defmonitor on
defscrollback 2048
defflow off

defencoding utf-8
encoding utf-8 utf-8
setenv LANG ja_JP.UTF-8

hardstatus alwayslastline "%{= Kw} %-Lw%40L>%{b KC} %n %t %{-}%+w%-0="
# markkeys j=^N:k=^P:l=^F:0=^A:$=^E:^F=^V:h=^B

bind ^Y paste .
bind 'K' kill

bind z info
bind ^z info
bind Z info
bind ^Z info
bind g info
bind ^g info
bind G info
bind ^G info
bind F info
bind ^F info
bind f info
bind ^f info

